# Deribit API Configuration
DERIBIT_API_KEY=your_api_key_here
DERIBIT_API_SECRET=your_api_secret_here
DERIBIT_ENV=test  # test or prod

# Trading Configuration
INITIAL_EQUITY=10000
RISK_PER_CONDOR=0.01  # 1% of equity
MAX_PORTFOLIO_RISK=0.03  # 3% of equity
TP_RATIO=0.55  # Take profit at 55% of credit
SL_MULT=1.2  # Stop loss at 1.2x credit
MIN_DTE=7  # Minimum days to expiration
MAX_DTE=10  # Maximum days to expiration
MIN_IV_PERCENTILE=30  # Minimum IV rank to enter
CLOSE_BEFORE_EXPIRY_HOURS=24  # Close positions 24h before expiry

# Iron Condor Parameters
SHORT_DELTA_TARGET=0.12  # Target delta for short options
WING_WIDTH_PERCENT=0.05  # 5% width for protective wings

# Logging
LOG_LEVEL=INFO
